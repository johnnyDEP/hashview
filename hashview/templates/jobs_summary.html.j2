{% extends "layout.html.j2" %}
{% block header %}
<br>
<h1>Job Summary</h1>
<br>
If everything looks good, click complete below.
<br>
<br>
<br>
{% endblock header %}
{% block content %}
    <article class="media content-section">
        <div class="media-body">
            <form method="POST" action="">
                {{ form.hidden_tag() }}
                <table class="table">
                    <tbody>
                            <tr>
                                <td>Job Name:</td>
                                <td>{{ job.name }}</td>
                            </tr>
                            <tr>
                                <td>Customer:</td>
                                <td>{{ customer.name }}</td>
                            </tr>
                            {% if settings.enabled_job_weights %}
                                <tr>
                                    <td>Job Priority:</td>
                                    {% if job.priority == 5 %}
                                        <td>{{ job.priority }} - highest</td>
                                    {% elif job.priority == 4 %}
                                        <td>{{ job.priority }} - higher</td>
                                    {% elif job.priority == 3 %}
                                        <td>{{ job.priority }} - normal</td>
                                    {% elif job.priority == 2 %}
                                        <td>{{ job.priority }} - lower</td>
                                    {% elif job.priority == 1 %}
                                        <td>{{ job.priority }} - lowest</td>
                                    {% endif %}
                                </tr>
                            {% endif %}
                            <tr>
                                <td>Hashfile:</td>
                                <td>{{ hashfile.name }} ({{ cracked_rate }})</td>
                            </tr>
                            <tr>
                                <td>Tasks:</td>
                                <td>
                                    {% for job_task in job_tasks %}
                                        {% for task in tasks %}
                                            {% if task.id == job_task.task_id %}
                                                {{ task.name }} <br>
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <td>Runtimes:</td>
                                <td>
                                    {% if settings.max_runtime_jobs == 0 %}
                                        Job will run until completed or canceled
                                    {% else %}
                                        Job will run for a maximum of {{ settings.max_runtime_jobs }} hour(s).
                                    {% endif %}
                                    <br>
                                    {% if settings.max_runtime_tasks == 0 %}
                                        Tasks will run until completed or canceled
                                    {% else %}
                                        Each Tasks will run for a maximum of {{ settings.max_runtime_tasks }} hour(s).
                                    {% endif %}

                                </td>
                            </tr>
                            <tr>
                                <td>Notifications:</td>
                                <td>
                                    {% if not job_notification and not hash_notification %}
                                        <i>None</i>
                                    {% endif %}
                                    {% if job_notification %}
                                        Job Notification: {{job_notification.method}} <br>
                                    {% endif %}
                                    {% if hash_notification %}
                                        Hash Notification ({{hash_notification_cnt}} Hashes): {{hash_notification.method}} <br>
                                    {% endif %}
                                </td>
                            </tr>
                    </tbody>
                </table>
                <div class="form-group">
                    <a class="btn btn-secondary" href="{{ url_for('jobs.jobs_list_tasks', job_id = job.id) }}">Back</a>
                    <!--<a class="btn btn-secondary" href="{{ url_for('jobs.jobs_assign_notifications', job_id = job.id) }}">Back</a>-->
                    {{ form.submit(class="btn btn-primary pull-right")}}
                </div>
            </form>
        </div>
    </article>
{% endblock content %}
