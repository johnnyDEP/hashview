{% extends "layout.html.j2" %}
{% block header %}
<br>
<h1>Notifications</h1>
<br>
Would you like to be notified when the job completes AND/OR when specific hashes are cracked. Note, cracked hash notifications will persist after job has been completed or removed.
<br>
<br>
<br>
{% endblock header %}
{% block content %}
<div class="content-section">
    <form method="POST" action="">
        {{ form.hidden_tag() }}
        <fieldset class="form-group">
           <div class="form-group">
                {{ form.job_completion.label(class="form-control-label") }}

                {% if form.job_completion.errors %}
                    {{ form.job_completion(class="form-control form-control-lg is-invalid") }}
                    <div class="invalid-feedback">
                        {% for error in form.job_completion.errors %}
                            <span>{{ error }}</span>
                        {% endfor %}
                    </div>
                {% else %}
                    {{ form.job_completion(class="form-control form-control-lg") }}
                {% endif %}
            </div>
            <div class="form-group">
                {{ form.hash_completion.label(class="form-control-label") }}

                {% if form.hash_completion.errors %}
                    {{ form.hash_completion(class="form-control form-control-lg is-invalid") }}
                    <div class="invalid-feedback">
                        {% for error in form.hash_completion.errors %}
                            <span>{{ error }}</span>
                        {% endfor %}
                    </div>
                {% else %}
                    {{ form.hash_completion(class="form-control form-control-lg", onchange="showHashes()") }}
                {% endif %}

            </div>
        </fieldset>
        <div class="form-group">
            <!--<a class="btn btn-secondary" href="{{ url_for('jobs.jobs_list_tasks', job_id = job.id) }}">Back</a>-->
            <a class="btn btn-secondary" href="{{ url_for('jobs.jobs_assigned_hashfile', job_id=job.id) }}">Back</a>
            {{ form.submit(class="btn btn-primary pull-right")}}
        </div>
    </form>
</div>
{% endblock content %}